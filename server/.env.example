# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# variable obligatoria

# DASE DE DATOS
DB_USER="your_db_user"
DB_HOST="localhost"
DB_PORT="5432"
DB_PASSWORD="your_db_password"
DB_NAME="your_db_name"
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public"

# HASH Y CONTRASEÑAS
HASH_SALT="your_hash_salt"
ENCRYPT_PASSWORD="your_encrypt_password"
# JWT
JWT_SECRET="your_jwt_secret"

# Configuración de SMTP
EMAIL_HOST="your_smtp_host"
EMAIL_PORT="your_smtp_port"
EMAIL_USERNAME="your_email_username"
EMAIL_PASSWORD="your_email_password"

# Recaptcha Key
RECAPTCHA_SECRET_KEY="your_recaptcha_secret_key"

# Storage Bucket (Obligatorio para subir archivos a Firebase)
URL_BUCKET_FIREBASE = 'your_firebase_storage_bucket';

# Semáforo Financiero - Configuración de Cron Jobs
# Formato: segundo minuto hora día_mes mes día_semana
# Ejemplos:
# '0 0 3 1 * *' - El día 1 de cada mes a las 3:00 AM
# '0 30 2 * * *' - Todos los días a las 2:30 AM
# '0 0 9 * * 1' - Todos los lunes a las 9:00 AM
SEMAFORO_FINANCIERO_CRON_TIME="0 0 3 1 * *"


# Datos Super User crear al iniciar la aplicación
SEED_SUPERADMIN_ON_BOOT=false
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=example_password
SUPERADMIN_NAME=Super Admin
SUPERADMIN_DOCUMENTO=12345678